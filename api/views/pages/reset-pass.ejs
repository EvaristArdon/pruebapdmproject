<body class="bg-default">
  <div class="main-content">
    <!-- Navbar -->
    <% include ../components/auth/navbar %>
    <!-- Header -->
    <% include ../components/auth/header %>
    <!-- Page content -->
    <div class="container mt--8 pb-5">
      <!-- Table -->
      <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
          <div class="card bg-secondary shadow border-0">
            <div class="card-body px-lg-5 py-lg-5">
              <div class="text-center text-muted mb-4">
                <small>new password</small>
              </div>
              <form role="form" action="register" method="POST">
                <div class="form-group">
                  <div class="input-group input-group-alternative mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                    </div>
                    <input class="form-control" name="username" placeholder="password" type="password" required>
                  </div>
                  <% if (locals.errors && errors.username) { %>
                    <strong class="invalid-feedback" style="display: block"><%= errors.username %></strong>
                  <% } %>
                </div>
              </div>
            </form>
            <form role="form" action="register" method="POST">
              <div class="card-body px-lg-5 py-lg-5">
                <div class="text-center text-muted mb-4">
                  <small>confirm password</small>
                </div>

                  <div class="form-group">
                    <div class="input-group input-group-alternative mb-3">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                      </div>
                      <input class="form-control" name="username" placeholder="password" type="password" required>
                    </div>
                    <% if (locals.errors && errors.username) { %>
                      <strong class="invalid-feedback" style="display: block"><%= errors.username %></strong>
                    <% } %>
                  </div>
              </form>
                <div class="text-center">
                  <button class="btn btn-primary mt-4">Change Password</button>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Include scripts -->
  <% include ../components/scripts %>
</body>
